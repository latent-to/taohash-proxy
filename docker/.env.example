# TIDES: Difficulty cron-job
ENABLE_DIFFICULTY_MONITORING=true
DIFFICULTY_CHECK_INTERVAL=30 # Minutes

# TIDES window calc cron job
TIDES_START_DATE=2025-09-09
ENABLE_TIDES_MONITORING=true
TIDES_CHECK_INTERVAL=20 #minutes

# TIDES rewards cron job
TIDES_REWARDS_START_DATE=2025-09-09
ENABLE_TIDES_REWARDS_MONITORING=true
TIDES_REWARDS_CHECK_INTERVAL=300

# TIDES BTC monitoring addresses
TIDES_BTC_ADDRESS=btc_address

# TIDES BCH monitoring (set COIN=bch and provide these)
# TIDES_BCH_ADDRESS=bitcoincash:your-bch-address
